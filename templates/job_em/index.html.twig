{% extends 'Back/Back-base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
<div class="content-wrapper">
<section class="content">
<div class="container-fluid">
<div class="card">
              <div class="card-header">
                <h3 class="card-title">List des jobs</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
              <a href="{{ path('addJobem') }}">Add job</a>
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Job</th>
                      <th>Nombre d'heure</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for c in jobems %}
                    <tr>
                      <td>{{c.jobEm}}</td>
                      <td>{{c.nbHeure}}</td>
                      <td>
                        <a href="{{ path('deleteJobem',{'id':c.jobEm}) }}">Delete</a>
                        <a href="{{ path('updateJobem',{'id':c.jobEm}) }}">Update</a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            </div>
            </div>
            </section>
{% endblock %}


