{% extends 'Back/Back-base.html.twig' %}

{% block body %}
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid p-10">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Ajouter un nouveau produit</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form,{'attr': {'novalidate':'novalidate'}}) }}
                        <div class="form-group">
                            {{form_label(form.nomProd,'Nom produit')}}
                            {{form_widget(form.nomProd, {'attr': {'class': 'form-control'}} )}}
                            {% if form_errors(form.nomProd) is not empty %}
                                <div class="alert alert-danger" >{{ form_errors(form.nomProd) }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            {{form_label(form.quantite,'Quantit√©')}}
                            {{form_widget(form.quantite, {'attr': {'class': 'form-control'}} )}}
                            {% if form_errors(form.quantite) is not empty %}
                                <div class="alert alert-danger p-0" >{{ form_errors(form.quantite) }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            {{form_label(form.prix,'Prix')}}
                            {{form_widget(form.prix, {'attr': {'class': 'form-control'}} )}}
                            {% if form_errors(form.prix) is not empty %}
                                <div class="alert alert-danger p-0" >{{ form_errors(form.prix) }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            {{form_label(form.image,'Image')}}
                            {{form_widget(form.image, {'attr': {'class': 'form-control'}} )}}
                            {% if form_errors(form.image) is not empty %}
                                <div class="alert alert-danger p-0" >{{ form_errors(form.image) }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group"></div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

