{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
<div class="content-wrapper">
<section class="content">
<div class="container-fluid">
<div class="card">
              <div class="card-header">
                <h3 class="card-title">List des reservations</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Id user</th>
                      <th>Date de création</th>
                      <th>Date de modification</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for p in reservations %}
                    <tr>
                      <td>{{p.idR}}</td>
                      <td>{{p.idU}}</td>
                      <td>{{p.DateCreation | date}}</td>
                      <td>{{p.DateModification | date}}</td>
                      <td>
                        <a href="{{ path('deleteReservation',{'id':p.idR}) }}">Delete</a>
                        <a href="{{ path('updateReservation',{'id':p.idR}) }}">Update</a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            </div>
            </div>
            </section>
{% endblock %}
