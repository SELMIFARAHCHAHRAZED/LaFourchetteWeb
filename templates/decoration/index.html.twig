{% extends 'base.html.twig' %}

{% block title %}Decorations{% endblock %}

{% block body %}
<div class="content-wrapper">
<section class="content">
<div class="container-fluid">
<div class="card"  style="margin:5px">
              <div class="card-header"  style="background-color:#4d4d4d;color:white" >
                <h3 class="card-title " style="font-weight: bold">Liste des d√©corations</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                  
                  <button type="submit" class="btn btn-primary float-right">
                    <a href="{{ path('addDecoration') }}" 
                    style="color:white;">
                      <i class="fas fa-plus" ></i>
                      Ajouter 
                    </a>
                  </button>
                  </div>
                </div>

                <div class="card-tools" style="margin:5px">
                  <div class="input-group input-group-sm" style="width: 150px;">
                  

                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">

                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">

                <table class="table table-hover text-nowrap" style="text-align: center;">
                  <thead>
                    <tr>
                      <!--<th>Id</th>-->
                      <th>Nom</th>
                      <th width="50">Prix</th>
                      <th width="250">Image</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for d in decorations %}
                    <tr>
                      <!--<td>{d.idD}}</td>-->
                      <td>{{d.Nom}}</td>
                      <td>{{d.Prix}}</td>

                      <td>
                      <img src="{{asset('uploads/images/')}}{{d.ImageD}}" width="250" height="250">
                      </td>
                      <td>
                      <button type="submit" class="btn btn-success " style="margin:5px">
                        <a href="{{ path('updateDecoration',{'id':d.idD}) }}" 
                        style="color:white;">
                          <i class="fas fa-edit" ></i>
                          Modifier 
                        </a>
                      </button>
                      <br>
                      <button type="submit" class="btn btn-danger " style="margin:5px">
                        <a href="{{ path('deleteDecoration',{'id':d.idD}) }}" 
                        style="color:white;">
                          <i class="fas fa-trash" ></i>
                          Supprimer 
                        </a>
                      </button>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            </div>
            </div>
            </section>
{% endblock %}
