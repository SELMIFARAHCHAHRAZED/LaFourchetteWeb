{% extends 'base.html.twig' %}

{% block title %}Modifier une Date{% endblock %}

{% block body %}

<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Modifier une Date</h1>
          </div>
        </div>
      </div>
    </section>
    <div class="form-group">
        <section class="content">
            <div class="container-fluid p-10">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Modifier une Date</h3>
                            </div>
                        
                            {{ form_start(form) }}
                            <div class="card-body">
    
                                <div class="form-group col-md-6 float-left">
                                    {{form_label(form.date,'Date', {'attr': {'class': 'form-control'}} )}}
                                    {{form_widget(form.date, {'attr': {'class': 'form-control'}} )}}
                                    {% if form_errors(form.date) is not empty %}
                                        <div class="alert alert-danger" >{{ form_errors(form.date) }}</div>
                                    {% endif %}
                                </div>

                                <div class="form-group col-md-6 float-right">
                                    {{form_label(form.etat,'Etat', {'attr': {'class': 'form-control'}} )}}
                                    {{form_widget(form.etat, {'attr': {'class': 'form-control'}} )}}
                                    {% if form_errors(form.etat) is not empty %}
                                        <div class="alert alert-danger" >{{ form_errors(form.etat) }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            

                            <div class="card-footer">
                                {{form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary  '}} )}}
                            </div>
                    
                            
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

{% endblock %}



