{% extends 'Back/Back-base.html.twig' %}

{% block title %}Type réclamation{% endblock %}

{% block body %}
<div class="content-wrapper">
<section class="content">
<div class="container-fluid">
{% for message in app.flashes('info')%}
    <div id="notif" class="alert alert-success">
    {{message}}
    </div>
    {% endfor %}
<div class="card">
              <div class="card-header">
                <h3 class="card-title btn btn-primary">List des types des réclamations</h3>
                <div class="card-tools">
                 <a class="btn btn-success center float-right" href="{{ path('addTypeRec') }}">Add type reclamation</a>
                 <br>
                 <br>
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
             
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Type de réclamation</th>
                      <th>Réference</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for p in typeRecs %}
                    <tr>
                      <td>{{p.typeRec}}</td>
                      <td>{{p.refT}}</td>
                      <td>
                        <a class="btn btn-danger" href="{{ path('deleteTypeRec',{'id':p.typeRec}) }}" onclick="notify_delete_typerec()"><i class="fa fa-trash" aria-hidden="true"></i>  Delete</a>
                        <a class="btn btn-warning" href="{{ path('updateTypeRec',{'id':p.typeRec}) }}"><i class="fas fa-edit"></i>  Update</a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
                
              </div>
             
              <!-- /.card-body -->
            </div>
            
            <!-- /.card -->
            </div>
            </div>
            </section>
{% endblock %}
